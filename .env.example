APP_URL=https://app.${BASE_DOMAIN}
API_URL=https://api.${BASE_DOMAIN}
N8N_URL=https://n8n.${BASE_DOMAIN}

# =========================
# Postgres
# =========================
POSTGRES_USER=retail
POSTGRES_PASSWORD=retail_password_change_me
