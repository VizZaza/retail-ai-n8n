{
  "name": "04 AI Forecast & Reorder Email",
  "nodes": [
    {
      "id": "115",
      "name": "Cron Daily 09:00",
      "type": "n8n-nodes-base.cron",
      "typeVersion": 1,
      "position": [
        240,
        320
      ],
      "parameters": {
        "triggerTimes": [
          {
            "mode": "everyDay",
            "hour": 9,
            "minute": 0
          }
        ]
      }
    },
    {
      "id": "116",
      "name": "Generate Suggestions (API)",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        520,
        320
      ],
      "parameters": {
        "method": "POST",
        "url": "={{$env.API_URL || 'https://api.' + $env.BASE_DOMAIN}}/ai/generate-suggestions",
        "responseFormat": "json",
        "options": {
          "timeout": 120000
        },
        "headerParametersJson": "={{JSON.stringify({'x-internal-api-key': $env.INTERNAL_API_KEY})}}"
      }
    },
    {
      "id": "117",
      "name": "Build Email",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        740,
        320
      ],
      "parameters": {
        "functionCode": "const s = items[0].json;\nreturn [{json:{subject:`AI reorder suggestions (${new Date(s.createdAt).toLocaleString()})`, html:`<pre style=\"white-space:pre-wrap\">${s.summary}</pre>`}}];"
      }
    },
    {
      "id": "118",
      "name": "Send AI Email",
      "type": "n8n-nodes-base.emailSend",
      "typeVersion": 1,
      "position": [
        980,
        320
      ],
      "parameters": {
        "fromEmail": "={{$env.SMTP_FROM || 'Retail AI <no-reply@'+$env.BASE_DOMAIN+'>'}}",
        "toEmail": "={{$env.EMAIL_TO}}",
        "subject": "={{$json.subject}}",
        "html": "={{$json.html}}"
      }
    }
  ],
  "connections": {
    "Cron Daily 09:00": {
      "main": [
        [
          {
            "node": "Generate Suggestions (API)",
            "type": "main",
            "index": 0
